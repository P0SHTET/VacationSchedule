<Window x:Class="VacationSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VacationSchedule" RenderOptions.BitmapScalingMode="HighQuality"
        mc:Ignorable="d" Background="LightBlue" ResizeMode="NoResize"
        Title="MainWindow" Height="700" Width="1450" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid x:Name="MainGrid"/>
        <Grid x:Name="ParentGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="33"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1"  Text="Январь" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="2"  Text="Февраль" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="3"  Text="Март " 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="4"  Text="Апрель" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="5"  Text="Май" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="6"  Text="Июнь" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="7"  Text=" Июль" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="8"  Text="  Август" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="9"  Text="   Сентябрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="10"  Text="   Октябрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="11"  Text="    Ноябрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="12"  Text="     Декабрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,70,0,0" 
                       FontSize="20" FontWeight="Bold"/>

            <TextBlock Grid.Column="1"  Text="Январь" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="2"  Text="Февраль" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="3"  Text="Март " 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="4"  Text="Апрель" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="5"  Text="Май" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="6"  Text="Июнь" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="7"  Text=" Июль" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="8"  Text="  Август" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="9"  Text="   Сентябрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="10"  Text="   Октябрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="11"  Text="    Ноябрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Column="12"  Text="     Декабрь" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" 
                       FontSize="20" FontWeight="Bold"/>

            <Line X1="3" Y1="80" X2="3" Y2="100"
                  Grid.Column="2" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="3" Y1="{Binding Path=LineY1}" X2="3" Y2="650"
                  Grid.Column="2" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="-5" Y1="80" X2="-5" Y2="650"
                  Grid.Column="3" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="-1" Y1="80" X2="-1" Y2="650"
                  Grid.Column="4" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="-1" Y1="80" X2="-1" Y2="650"
                  Grid.Column="5" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="1" Y1="80" X2="1" Y2="650"
                  Grid.Column="6" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="1" Y1="80" X2="1" Y2="650"
                  Grid.Column="7" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="4" Y1="80" X2="4" Y2="650"
                  Grid.Column="8" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="8" Y1="80" X2="8" Y2="650"
                  Grid.Column="9" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="8" Y1="80" X2="8" Y2="650"
                  Grid.Column="10" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="12" Y1="80" X2="12" Y2="650"
                  Grid.Column="11" StrokeThickness="0.5" Stroke="Black"/>
            <Line X1="12" Y1="80" X2="12" Y2="650"
                  Grid.Column="12" StrokeThickness="0.5" Stroke="Black"/>
            <ComboBox Style="{DynamicResource ComboBoxStyle1}" Name="DepartmentCombo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"
                      Width="340" Height="40" Grid.ColumnSpan="4" SelectionChanged="DepartmentCombo_SelectionChanged"/>
            <Button Grid.Column="4" HorizontalAlignment="Left" Margin="5,10,0,0" BorderThickness="0"
                    VerticalAlignment="Top" Height="40" Width="40" Click="RenameDepartment_ButtonClick"
                    Background="LightBlue" BorderBrush="#FFACACAC">
                <Image Source="ImageSource/pencil.png"/>
            </Button>
            <Button Grid.Column="4" HorizontalAlignment="Left" Margin="50,10,0,0" Click="AddDepartment_ButtonClick"
                VerticalAlignment="Top" Height="40" Width="40" Background="LightBlue" 
                BorderBrush="#FFACACAC" BorderThickness="0">
                <Image Source="ImageSource/plus.png"/>
            </Button>
            <Button Grid.Column="4" HorizontalAlignment="Left" Margin="95,10,0,0" 
                VerticalAlignment="Top" Height="40" Width="40" Background="LightBlue" Click="DeleteDepartment_ButtonClick"
                BorderBrush="#FFACACAC" BorderThickness="0" Grid.ColumnSpan="2">
                <Image Source="/ImageSource/trash.png"/>
            </Button>
        </Grid>


    </Grid>
</Window>
