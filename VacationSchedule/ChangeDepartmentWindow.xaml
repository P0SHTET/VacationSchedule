<Window x:Class="VacationSchedule.ChangeDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VacationSchedule"
        mc:Ignorable="d" WindowStyle="None"
        Title="ChangeDepartmentWindow" Height="120" Width="352">
    <Grid>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="256,71,0,0" 
            Background="LightGreen" Foreground="ForestGreen" FontWeight="Bold"
            VerticalAlignment="Top" Width="70" Click="SaveButton_Click" Height="30"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="181,71,0,0" 
            Background="LightPink" Foreground="Crimson" FontWeight="Bold"
            VerticalAlignment="Top" Width="70" Click="CancelButton_Click" Height="30"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Center" Text="" FontSize="20"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Margin="0,31,0,0" Height="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,10,0,0" Text="Название отдела:" TextWrapping="Wrap" VerticalAlignment="Top" Height="16"/>

    </Grid>
</Window>
